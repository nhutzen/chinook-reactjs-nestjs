# ==========================================
# CẤU HÌNH ỨNG DỤNG (APP CONFIG)
# ==========================================
NODE_ENV=development
PORT=3000
APP_NAME="My NestJS App"
APP_URL=http://localhost:3000

# ==========================================
# CƠ SỞ DỮ LIỆU (DATABASE - Thường dùng Postgres/MySQL)
# ==========================================
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password123
DB_NAME=nest_database

# ==========================================
# BẢO MẬT & XÁC THỰC (SECURITY & AUTH)
# ==========================================
# Dùng để ký mã JWT (Nên dùng chuỗi ngẫu nhiên dài)
JWT_SECRET=your_super_secret_key_here
JWT_EXPIRES_IN=1d

# ==========================================
# REDIS (Cho Caching hoặc Queue nếu cần)
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ==========================================
# CẤU HÌNH MAIL (Gửi mã OTP, reset pass...)
# ==========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@gmail.com
MAIL_PASS=app_password_from_google

# ==========================================
# DOCKER (Dùng cho Docker Compose)
# ==========================================
# Tên các service trong docker-compose.yml
DOCKER_APP_IMAGE_NAME=nest-app-image
DOCKER_DB_CONTAINER_NAME=postgres-db